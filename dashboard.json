{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "annotations": {
    "list": []
  },
  "editable": true,
  "gnetId": null,
  "id": null,
  "iteration": 1719990000000,
  "panels": [
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "unit": "mebibytes"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum by(pod) (container_memory_usage_bytes{container!=\"\", container!=\"POD\", namespace=~\"$namespace\", pod=~\"$pod\"}) / 1024 / 1024",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "title": "Pod Memory Usage (MiB)",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "unit": "millicores"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 9
      },
      "id": 2,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum by(pod) (rate(container_cpu_usage_seconds_total{container!=\"\", container!=\"POD\", namespace=~\"$namespace\", pod=~\"$pod\"}[5m])) * 1000",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "title": "Pod CPU Usage (millicore)",
      "type": "timeseries"
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": [],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "refresh": 1,
        "query": "label_values(namespace)",
        "label": "Namespace",
        "includeAll": false,
        "multi": false
      },
      {
        "name": "pod",
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "refresh": 2,
        "query": "label_values(kube_pod_info{namespace=\"$namespace\"}, pod)",
        "label": "Pod",
        "includeAll": false,
        "multi": false,
        "dependsOn": [
          "namespace"
        ]
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
